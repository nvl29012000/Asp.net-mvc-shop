@model IEnumerable<Model.AdminUser>

@{
    ViewBag.Title = "Người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <br />
    <h2>Tài khoản quản trị viên</h2>


    <p>
        <button class="btn btn-primary" id="AddUser" onclick="document.getElementById('User').style.display = 'block';">
            Thêm mới
        </button>
    </p>
    <table class="table" id="table-user">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>Vô hiệu hóa</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr id="tr-@item.ID">
                <th>
                    @Html.DisplayFor(modelItem => item.Username)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.Status)
                </th>
                <th>
                    <button class="change btn-primary" id="@item.ID">@(item.Status ? "Vô hiệu hóa" : "Kích hoạt")</button>
                </th>
            </tr>
        }

    </table>
    <p id="message" class="text-danger"></p>
    <div id="User" style="width : 500px ; display : none ">
        <h3>Thêm mới User</h3>
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control" id="username" placeholder="Nhập Username">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Nhập Password">
        </div>
        <div class="form-group">
            <label for="repass">Nhập lại Password</label>
            <input type="password" class="form-control" id="repass" placeholder="Nhập lại Password">
        </div>
        <br />
        <button class="btn btn-primary" id="Add">Thêm mới</button>
        <button class="btn btn-primary" id="Cancel">Hủy bỏ</button>
        <br />
    </div>
    <br />

