@model Model.Product

@{
    ViewBag.Title = "Sửa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var listall = (List<Model.ProductCategory>)ViewBag.Listall;
}

<br />
<div>
    <a href="@Url.Action("Product", "Product")" class="btn btn-primary"><span class="fa fa-backward"></span> Quay lại</a>
</div>
<br />
<h2>Sửa sản phẩm</h2>

<form>
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID, new { @id = "productID" })
        <div class="form-group">
            <div class="col-md-10">
                <label for="product-name">Product Name</label>
                <input type="text" value="@Model.Name" id="product-name" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="product-code">Product Code</label>
                <input type="text" value="@Model.ProductCode" id="product-code" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="product-title">Title</label>
                <input type="text" value="@Model.Title" id="product-title" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="product-description">Description</label>
                <input type="text" value="@Model.Description" id="product-description" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="product-image">Product Image</label>
                <input type="text" id="product-image" value="@Model.Image" class="form-control" />
                <br />
                <a id="select-image" class="btn btn-primary">Chọn ảnh</a>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="product-moreimage">Product Details Image</label>
                <input type="text" id="product-moreimage" value="@Model.DetailImage" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="product-price">Price</label>
                <input type="number" value="@Model.Price" id="product-price" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="product-saleprice">Sale Price</label>
                <input type="number" value="@Model.SalePrice" id="product-saleprice" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="product-quantity">Quantity</label>
                <input type="number" value="@Model.Quantity" id="product-quantity" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="product-category">Category</label>
                <input list="category" value="@Model.CategoryID" id="product-category" class="form-control" />
                <datalist id="category">
                    @foreach (var item in listall)
                    {
                        <option value="@item.ID">@item.Name</option>
                    }
                </datalist>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label for="product-detail">Product Details</label>
                <input type="text" value="@Model.ProductDetail" id="product-detail" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label for="Saledate">Sale Date</label>
                <input type="datetime-local" value="@Model.SaleDate" id="Saledate" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="product-metakeyword">Product Meta Keyword</label>
                <input type="text" value="@Model.MetaKeyword" id="product-metakeyword" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="product-metadescription">Product Meta Description</label>
                <input type="text" value="@Model.MetaDescription" id="product-metadescription" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="status">Status</label>
                <div class="checkbox">
                    <input type="checkbox" id="status" checked="@Model.Status" />
                </div>
            </div>
        </div>
        <p id="message" class="text-danger"></p>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="#" class="btn btn-primary" id="EditProduct">Lưu thay đổi</a>
            </div>
        </div>
    </div>
</form>


